<% include ./theme/header.ejs %>
   
  <div class="maincontainer">
    <section id="product">
      <div class="container">
      <!--  breadcrumb --> 
      <ul class="breadcrumb">
          <li>
              <a href="#">Home</a>
              <span class="divider">/</span>
          </li>
          <li class="active"> Shopping Cart</li>
      </ul>       
    <center>   <h1 class="heading1"><span class="maintext"> </span><span class="subtext">Kết quả tìm kiếm thể loại <%= title %> </span></h1></center>
        <!-- Cart-->
      <% if(data.length > 0 ){ %>
      <div class="cart-info">
          <table class="table table-striped table-bordered">
              <tr>
                  <th class="image">Hình ảnh</th>
                  <th class="name"> Tên cuốn sách</th>
                  <th class="author">Tác giả</th>
                  <th class="total">Xem chi tiết</th>
                  <th class="name">Thể loại</th>
                  
              </tr>
              
            <%  data.forEach(function(search){ %>
              <tr>
              <td class="image"><img title="product" alt="product" src="/uploads/<%= search.img[0]%>" height="50" width="50"></a></td>
              <td  class="name"><%= search.name %></td>
              <td class="name"><%= search.author %> </td>
              <td class="total"> <a href="/product/<%= search._id %>/chitiet">Chi tiết </a>
              <td class="name"><%= search.type %> </td>
            </tr>
            <% }) %>
          </table>
      </div>
    <% } %>
     </section>
   </div>


